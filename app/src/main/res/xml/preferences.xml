<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreferenceCompat
        android:key="example_switch"
        android:title="@string/sound"
        android:summary="@string/turn_the_sound"
        android:defaultValue="false" />

    <PreferenceCategory android:title="@string/other_settings">

        <ListPreference
            android:key="example_list"
            android:title="@string/select_an_option"
            android:summary="@string/view_available_options"
            android:entries="@array/example_list_entries"
            android:entryValues="@array/example_list_values"
            android:defaultValue="1" />

    </PreferenceCategory>
</androidx.preference.PreferenceScreen>