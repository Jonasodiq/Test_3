<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Skugga -->
    <item android:left="4dp" android:top="4dp"> <!-- Öka offset för att förstärka skuggeffekten -->
        <shape android:shape="rectangle">
            <solid android:color="#66000000" /> <!-- Skuggfärg med högre opacitet -->
            <corners android:radius="12dp" /> <!-- Rundade hörn för skuggan -->
        </shape>
    </item>
    <!-- Bakgrund med ram och rundade hörn -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Bakgrundsfärg -->
            <stroke android:width="1dp" android:color="#CCCCCC" /> <!-- Tunn ram -->
            <corners android:radius="12dp" /> <!-- Rundade hörn -->
        </shape>
    </item>
</layer-list>


